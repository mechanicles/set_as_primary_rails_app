<div id="banner" class="page-header">
  <div id="hide" class="alert alert-dismissible alert-secondary">
    Post model is a single model and does not have any association.
  </div>
  <div class="row">
    <div class="col-lg-8 col-md-7 col-sm-6">
      <h3>
        All posts
      </h3>
    </div>
  </div>
</div>

<div class="jumbotron">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        <th scope="col">Primary?</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td><%= post.primary? ? "Yes" : "No" %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
